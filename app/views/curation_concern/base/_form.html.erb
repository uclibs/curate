<%= simple_form_for [:curation_concern, curation_concern], html: { onsubmit: 'event.preventDefault(); validateAllFields();', name: "new_input_form" } do |f| %>
  
  <% if f.error_notification -%>
    <div class="alert alert-error fade in">
      <strong>Wait don't go!</strong> There was a problem with your submission. Please review the errors below:
      <a class="close" data-dismiss="alert" href="#">&times;</a>
    </div>
  <% end -%>

  <%= render 'on_behalf_of', curation_concern: curation_concern, f: f %>

  <%= render "form_files_and_links", curation_concern: curation_concern, f: f %>

  <%= render "form_required_information", curation_concern: curation_concern, f: f %>

  <%= render "form_additional_information", curation_concern: curation_concern, f: f %>

  <%= render "form_doi", curation_concern: curation_concern, f: f %>

  <%= render "form_content_editors", curation_concern: curation_concern, f: f %>

  <%= render "form_representative_image", curation_concern: curation_concern, f: f %>

  <%= render "form_permission", curation_concern: curation_concern, f: f %>

  <%= render "form_content_readers", curation_concern: curation_concern, f: f %>

  <%= render "form_content_license", curation_concern: curation_concern, f: f %>

  <%= render 'form_contributor_agreement', curation_concern: curation_concern, contributor_agreement: contributor_agreement %>

  <div class="row">
    <br>
    <div id="invalid-input-alert" style="visibility: hidden;" class="alert fade in">
        Sorry, a few required fields are empty or blank. Please recheck your submission before proceeding.
        <a class="close" data-dismiss="alert" href="#">&times;</a>
      </div>
    <div class="span12 form-actions">
      <%- if curation_concern.new_record? -%>
      <div class="span3">  
        <%= f.button :submit, "Create #{curation_concern.human_readable_type}", class: 'btn btn-primary require-contributor-agreement', id: 'submit_work'  %>
        <%= link_to 'Cancel', root_path, class: 'btn btn-link' %>
      </div>
      <div class="span8 pull-right" id="spinner-wrapper">
        &nbsp;
      </div>
      <%- else -%>
        <%= f.button :submit, "Update #{curation_concern.human_readable_type}", class: 'btn btn-primary require-contributor-agreement'  %>
        <%= link_to 'Cancel', polymorphic_path([:curation_concern, curation_concern]), class: 'btn btn-link' %>
      <%- end -%>
    </div>
  </div>

<% end %>
