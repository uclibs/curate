<%# This is a search result view %>
<% solr_doc = image.inner_object.solr_doc %>
<li id="document_<%= image.noid %>" class="search-result">

  <%= render :partial => 'catalog/_index_partials/identifier_and_action', locals: {document: image, counter: image_counter} %>

  <div class="row-fluid">
    <div class="span2">
      <%= render :partial => 'catalog/_index_partials/thumbnail_display', locals: {document: image} %>
    </div>

    <div class="span10">
      <dl class="attribute-list">
        <% if solr_doc.has?('desc_metadata__creator_tesim') %>
          <dt>Creator(s):</dt>
          <dd><%= render_index_field_value(document: solr_doc, field: 'desc_metadata__creator_tesim') %></dd>
        <% end %>

        <% if solr_doc.has?('desc_metadata__description_tesim') %>
          <dt>Description:</dt>
          <dd><%= truncate(solr_doc['desc_metadata__description_tesim'].first.html_safe, length: 150) %></dd>
        <% end %>

        <% if solr_doc.has?('desc_metadata__date_created_tesim') %>
          <dt>Date:</dt>
          <dd><%= solr_doc['desc_metadata__date_created_tesim'].first %></dd>
        <% end %>
      </dl>
    </div>

  </div>

</li>
